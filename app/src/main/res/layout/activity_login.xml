<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.francony.romain.channelmessaging.LoginActivity"
    android:id="@+id/llBackground"
    android:padding="20dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="220dp"
            android:layout_gravity="center"
            android:layout_height="220dp"
            android:id="@+id/imageAccueil"
            android:src="@drawable/channel_messaging_logo"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
        <EditText
            app:theme="@style/TextLabel"
            android:layout_width="match_parent"
            android:hint="Login"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:id="@+id/txtLogin"
            android:textColor="@color/white"
            android:paddingBottom="20dp"
            android:text="rfran" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
        <EditText
            app:theme="@style/TextLabel"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:hint="Mot de passe"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/txtPassword"
            android:textColor="@color/white"
            android:paddingBottom="20dp"
            android:text="romainfrancony" />
        </android.support.design.widget.TextInputLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.wang.avi.AVLoadingIndicatorView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator" />


        <Button
            android:text="Connexion"
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/greenMaterial"
            />
        </RelativeLayout>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:id="@+id/textAccueil"
            android:textColor="@color/white"
            android:text="Salut Ã  tous"
            android:layout_height="wrap_content" />



    </LinearLayout>









</LinearLayout>
