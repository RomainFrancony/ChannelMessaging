<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:name="com.francony.romain.channelmessaging.fragments.ChannelListFragment"
        tools:layout="@layout/fragment_channel_list"
        android:id="@+id/fragmentChannel"></fragment>

    <fragment
    android:layout_width="match_parent"
        android:layout_weight="1"
    android:layout_height="match_parent"
    android:name="com.francony.romain.channelmessaging.fragments.MessageFragment"
    tools:layout="@layout/fragment_message"
        android:id="@+id/fragmentMessage"></fragment>
</LinearLayout>